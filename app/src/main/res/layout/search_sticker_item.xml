<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sticker_title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sticker_deadline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sticker_title"
        android:text="TextView"
        android:textSize="20sp" />

    <TableRow
        android:id="@+id/stickerTagRow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sticker_deadline">

        <TextView
            android:id="@+id/stickerTags0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="0"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="1"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="2"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="3"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="4"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="5"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="6"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/stickerTags7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:tag="7"
            android:textSize="45sp" />
    </TableRow>

</RelativeLayout>